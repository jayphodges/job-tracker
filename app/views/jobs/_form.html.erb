<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>


  <select class="category-selector" name="trip[end_station_id]">
    byebug
    <% @categories.order(:name).each do |category| %>
        <option value="<%= category.id %>">
            <%= station.title %>
        </option>
    <% end %>
</select>

  <%= f.submit %>
<% end %>
